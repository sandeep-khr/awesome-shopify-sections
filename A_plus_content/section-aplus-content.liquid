{%- style -%}
  .aplus-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }

  .aplus-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Animations */
  .aplus-animate {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .aplus-animate.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Blocks */
  .aplus-block {
    margin-bottom: 60px;
  }
  .aplus-block:last-child {
    margin-bottom: 0;
  }

  /* Image Text Split */
  .aplus-split-layout {
    display: flex;
    align-items: center;
    gap: 60px;
    flex-direction: column;
  }
  
  @media (min-width: 768px) {
    .aplus-split-layout {
      flex-direction: row;
    }
    .aplus-split-layout.layout-right {
      flex-direction: row-reverse;
    }
  }

  .aplus-split-image {
    flex: 1;
    width: 100%;
  }

  .aplus-split-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .aplus-split-content {
    flex: 1;
    padding: 20px 0;
  }

  .aplus-heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: #1a1a1a;
  }

  .aplus-text {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #4a4a4a;
    margin-bottom: 2rem;
  }

  /* Features Grid */
  .aplus-features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    text-align: center;
  }

  @media (min-width: 768px) {
    .aplus-features-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .aplus-feature-item {
    padding: 20px;
  }

  .aplus-feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: inline-block;
  }

  .aplus-feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1a1a1a;
  }

  .aplus-feature-desc p {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.5;
    margin: 0;
  }

  /* Full Width Banner */
  .aplus-banner-container {
    position: relative;
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .aplus-banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .aplus-banner-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    padding: 20px;
    color: white;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }
  
  .aplus-banner-content.text-left { text-align: left; left: 0; transform: translateY(-50%); padding-left: 50px; }
  .aplus-banner-content.text-right { text-align: right; left: auto; right: 0; transform: translateY(-50%); padding-right: 50px; }
  .aplus-banner-content.text-center { text-align: center; }

  .aplus-banner-heading {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

{%- endstyle -%}

<div class="aplus-section-{{ section.id }}">
  <div class="aplus-container">
    {% for block in section.blocks %}
      <div class="aplus-block aplus-animate" {{ block.shopify_attributes }}>
        
        {% case block.type %}
          {% when 'image_text' %}
            <div class="aplus-split-layout layout-{{ block.settings.layout }}">
              <div class="aplus-split-image">
                {% if block.settings.image %}
                  {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'aplus-img' }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="aplus-split-content">
                <h2 class="aplus-heading">{{ block.settings.heading }}</h2>
                <div class="aplus-text">{{ block.settings.content }}</div>
              </div>
            </div>

          {% when 'features_grid' %}
            <div class="aplus-features-grid">
              {% for i in (1..3) %}
                {% capture icon_key %}feature_{{ i }}_icon{% endcapture %}
                {% capture title_key %}feature_{{ i }}_title{% endcapture %}
                {% capture desc_key %}feature_{{ i }}_desc{% endcapture %}
                
                <div class="aplus-feature-item">
                  <span class="aplus-feature-icon">{{ block.settings[icon_key] }}</span>
                  <h3 class="aplus-feature-title">{{ block.settings[title_key] }}</h3>
                  <div class="aplus-feature-desc">{{ block.settings[desc_key] }}</div>
                </div>
              {% endfor %}
            </div>

          {% when 'full_width_banner' %}
            <div class="aplus-banner-container">
              {% if block.settings.image %}
                {{ block.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', class: 'aplus-banner-image' }}
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg aplus-banner-image' }}
              {% endif %}
              <div class="aplus-banner-content text-{{ block.settings.text_alignment }}">
                <h2 class="aplus-banner-heading">{{ block.settings.overlay_text }}</h2>
              </div>
            </div>

        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.aplus-section-{{ section.id }} .aplus-animate').forEach(el => {
    observer.observe(el);
  });
});
</script>
